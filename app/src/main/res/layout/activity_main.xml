<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:screenOrientation="portrait"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#7986cb"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cain.alejandro.doudinamico.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/bienvenida"
        android:layout_centerHorizontal="true"
        android:text="Resuelve para entrar..."
        android:textSize="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:textColor="#ffffff"
        android:digits="1234567890"
        android:text="7 X 32 ="
        android:id="@+id/et1"
        android:layout_marginTop="130dp"
        android:layout_below="@id/bienvenida"
        android:textSize="32dp"/>

    <EditText
        android:layout_width="1.5in"
        android:layout_height="0.3in"
        android:hint="Resultado....."
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:id="@+id/caja1"
        android:layout_below="@+id/bienvenida"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="125dp"
         />

    <Button
        android:layout_width="1in"
        android:text="Enviar"
        android:textColor="#ffffff"
        android:layout_height="0.5in"
        android:layout_below="@id/caja1"
        android:layout_marginTop="50dp"
        android:background="#546e7a"
        android:id="@+id/boton1"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
