<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7986cb"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:screenOrientation="portrait"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cain.alejandro.doudinamico.Main3Activity">

    <TextView
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:layout_height="40dp"
        android:id="@+id/et1"
        android:text="Responde Correctamente!!"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:layout_height="40dp"
        android:text="Â¿Cual es la capital de Marruecos?"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et1"
        android:id="@+id/et2" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et2"

        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0.2in"
        android:id="@+id/radioGroup">
        <RadioButton
            android:id="@+id/Agadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Agadir"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/texView"/>
        <RadioButton
            android:id="@+id/Safi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:checked="false"
            android:text="Safi"
            android:layout_alignTop="@+id/texView"/>
        <RadioButton
            android:id="@+id/Rabat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:checked="false"
            android:text="Rabat"
            android:layout_alignTop="@+id/texView"/>
        <RadioButton
            android:id="@+id/jenifra"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Jenifra"
            android:layout_alignTop="@+id/texView"/>

    </RadioGroup>

    <Button
        android:layout_width="160dp"
        android:text="Enviar"
        android:layout_height="60dp"
        android:background="#546e7a"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/radioGroup"
        android:layout_marginTop="40dp"
        android:id="@+id/boton1"/>



</RelativeLayout>
