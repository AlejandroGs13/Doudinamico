<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7986cb"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:screenOrientation="portrait"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cain.alejandro.doudinamico.Main4Activity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textColor="#ffffff"
        android:text="Â¿Cuanto tiempo tarda girando?"
        android:textSize="24dp"
        android:id="@+id/et1"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/et1"
        android:layout_centerHorizontal="true"
        android:id="@+id/pro1"
        android:max="35"
        android:progress="0"/>

    <ToggleButton
        android:layout_width="150dp"
        android:background="#546e7a"
        android:textColor="#ffffff"
        android:layout_height="60dp"
        android:text="Iniciar"
        android:layout_below="@id/pro1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/boton1"/>
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="#ffffff"

        android:layout_below="@id/boton1"
        android:layout_centerHorizontal="true"
        android:hint="0.0s"
        android:textAlignment="center"
        android:textSize="26dp"
        android:id="@+id/caja1"/>
    <Button
        android:layout_width="150dp"
        android:background="#546e7a"
        android:layout_height="60dp"
        android:layout_below="@id/caja1"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:text="Enviar"
        android:id="@+id/boton2"/>
</RelativeLayout>
